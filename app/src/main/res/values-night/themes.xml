<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="MyPharmacyTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="29">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ambulance_white</item>
        <item name="colorPrimaryVariant">@color/ambulance_red</item>
        <item name="colorOnPrimary">@color/ambulance_blue</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ambulance_red</item>
        <item name="colorSecondaryVariant">@color/ambulance_red</item>
        <item name="colorOnSecondary">@color/ambulance_white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="RoundedCornerShapeAppearance">
        <item name="cornerSize">16dp</item>
        <item name="cornerFamily">rounded</item>
    </style>
    <style name="MyMenuItemStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
</resources>
