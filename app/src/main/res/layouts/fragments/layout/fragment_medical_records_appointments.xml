<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <!-- Define a RecyclerView to show the list of Appointments -->
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/appointments_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <!-- Define an Add button to add new Appointments to the list -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/add_appointment_button"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="16dp"
            app:srcCompat="@drawable/plus_circle"
            android:elevation="2dp"
            android:stateListAnimator="@null"
    />

</FrameLayout>
