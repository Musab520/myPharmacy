<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="?attr/actionBarSize"
        android:background="@drawable/med_background">

    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="2"
            android:columnCount="2"
            android:orientation="horizontal"
            android:layout_margin="16dp"
            android:alignmentMode="alignMargins">

        <!-- CardView for "Doctor" -->
        <androidx.cardview.widget.CardView
                android:id="@+id/doctor_card"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_rowWeight="0"
                android:layout_columnWeight="0"
                android:layout_margin="8dp">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/doctors_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40dp"
                        android:src="@drawable/doctor"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/medical_records_doctor"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_gravity="bottom"/>
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for "Drug" -->
        <androidx.cardview.widget.CardView
                android:id="@+id/drug_card"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="0"
                android:layout_margin="8dp">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/drug_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="40dp"
                        android:src="@drawable/medications"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/medical_records_drug"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_gravity="bottom"/>

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for "Appointment" -->
        <androidx.cardview.widget.CardView
                android:id="@+id/appointment_card"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:layout_gravity="center">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/appointments_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:src="@drawable/appointment"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/medical_records_appointment"
                        android:textColor="@android:color/black"
                        android:textSize="21sp"
                        android:gravity="center"
                        android:layout_gravity="bottom"/>

            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- CardView for "Lab Tests" -->
        <androidx.cardview.widget.CardView
                android:id="@+id/lab_tests_card"
                android:layout_width="170dp"
                android:layout_height="200dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                android:layout_gravity="center">

            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:id="@+id/lab_tests_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="30dp"
                        android:src="@drawable/lab_tests"/>

                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/medical_records_lab_tests"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:layout_gravity="bottom"/>

            </FrameLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</ScrollView>
