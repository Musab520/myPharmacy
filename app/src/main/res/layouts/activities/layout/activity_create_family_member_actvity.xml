<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/med_background"
    tools:context=".ui.family.CreateFamilyMemberActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_rectangle"
        android:clipToPadding="false"
        android:elevation="8dp"
        android:outlineProvider="background"
        android:padding="16dp">

        <TextView
            style="@style/title"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="50dp"
            android:text="Tell Us about them."
            />
        <!-- Add your input form elements here -->
        <EditText
            android:id="@+id/member_first_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/first_name" />

        <EditText
            android:id="@+id/member_last_name_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/last_name" />

        <Spinner
            android:id="@+id/member_gender_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:entries="@array/gender"
            android:hint="@string/gender_hint" />

        <EditText
            android:id="@+id/member_birth_day_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:focusable="false"
            android:hint="@string/select_a_date" />

        <EditText
            android:id="@+id/member_address_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/address" />

        <EditText
            android:id="@+id/member_phone_number_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/phone_number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/member_weight_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/weight_kg"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/member_height_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/height_meters"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/member_marital_status_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:entries="@array/marital_status"
            android:hint="@string/marital_status_hint" />

        <Spinner
            android:id="@+id/member_blood_type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:entries="@array/blood_types"
            android:hint="@string/blood_type_hint" />
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/member_pic_location_type"
            android:layout_marginTop="16dp"
            android:hint="Profile Pic Location"
            />

        <Button
            android:id="@+id/member_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/save" />

    </LinearLayout>

</RelativeLayout>
