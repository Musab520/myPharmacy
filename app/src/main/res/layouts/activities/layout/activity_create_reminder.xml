<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".ui.medReminder.CreateReminderActivity"
        android:orientation="vertical">

    <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/edit_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <!-- Drug from spinner -->
    <TextView
            android:text="Drug"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Spinner
            android:id="@+id/spinner_drug"
            android:layout_width="match_parent"
            android:layout_height="20pt"/>

    <TextView
            android:text="Dosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <EditText
            android:id="@+id/edit_text_dosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <!--Get frequency using radio button (determines list size)-->
    <TextView
            android:text="Frequency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <RadioButton
                android:id="@+id/radio_button_daily"
                android:text="Daily"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <RadioButton
                android:id="@+id/radio_button_weekly"
                android:text="Weekly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <RadioButton
                android:id="@+id/radio_button_monthly"
                android:text="Monthly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

    </RadioGroup>

    <!--Get time of reminder (time picker)-->
    <TextView
            android:text="Time of Reminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <Button
            android:id="@+id/button_create"
            android:text="Create Drug"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</LinearLayout>
