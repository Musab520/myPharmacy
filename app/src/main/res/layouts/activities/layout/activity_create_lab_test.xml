<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/med_background">

    <!-- Center the white rectangle input form -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_rectangle"
        android:clipToPadding="false"
        android:elevation="8dp"
        android:orientation="vertical"
        android:outlineProvider="background"
        android:padding="16dp">

        <!-- Add your input form elements here -->

        <TextView
            android:id="@+id/intro_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="0dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/please_fill_in_lab_test_information"
            android:textColor="@color/myPharmacy_main_color"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/test_date_taken_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/when_was_the_test_taken"
            android:textColor="@color/myPharmacy_main_color"
            android:textSize="18sp" />
        <EditText
            android:id="@+id/test_date_field"
            android:layout_width="311dp"
            android:layout_height="50dp"
            android:focusable="false"
            android:hint="@string/select_a_date"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginEnd="9dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/how_is_the_lab_test_stored"
            android:textColor="@color/myPharmacy_main_color"
            android:textSize="18sp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/lab_test_type_spinner"
            android:layout_width="295dp"
            android:layout_height="50dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:spinnerMode="dropdown" />



        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:layout_marginEnd="42dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/lab_text_name"
            android:textColor="@color/myPharmacy_main_color"
            android:textSize="18sp" />



        <EditText
            android:id="@+id/lab_test_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="@string/ex_xray"
            android:inputType="textPersonName"
            android:textSize="16sp" />


        <Button
            android:id="@+id/submit_lab_type_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="16dp"
            android:text="@string/submit"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/myPharmacy_main_color"/>
    </LinearLayout>


</RelativeLayout>
