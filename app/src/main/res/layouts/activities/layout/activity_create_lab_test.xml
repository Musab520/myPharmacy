<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/med_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/rounded_rectangle"
        android:clipToPadding="false"
        android:elevation="8dp"
        android:outlineProvider="background"
        android:padding="16dp">


        <TextView
            android:id="@+id/intro_view"
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="14dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="26dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/please_fill_in_lab_test_information"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="306dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/intro_view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="9dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/how_is_the_lab_test_stored"
            android:textColor="#FF0000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/test_date_field"
            android:layout_width="311dp"
            android:layout_height="90dp"
            android:layout_above="@+id/submit_lab_type_button"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="43dp"
            android:focusable="false"
            android:hint="@string/select_a_date"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/lab_test_type_spinner"
            android:layout_width="295dp"
            android:layout_height="57dp"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/submit_lab_type_button"
            android:layout_width="159dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="97dp"
            android:layout_marginEnd="75dp"
            android:layout_marginBottom="13dp"
            android:text="@string/submit"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="264dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lab_test_type_spinner"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="42dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/lab_text_name"
            android:textColor="#FF0000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/test_date_taken_text_view"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lab_test_name_edit_text"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="28dp"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="2"
            android:text="@string/when_was_the_test_taken"
            android:textColor="#FF0000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/lab_test_name_edit_text"
            android:layout_width="293dp"
            android:layout_height="55dp"
            android:layout_below="@+id/textView4"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="@string/ex_xray"
            android:inputType="textPersonName"
            android:textSize="16sp" />


    </RelativeLayout>


</RelativeLayout>
